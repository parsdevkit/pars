{
    "go.toolsEnvVars": {
        "GOFLAGS": "-mod=readonly"
    },
    "go.lintOnSave": "workspace",
    "go.formatTool": "gofmt",
    "go.useLanguageServer": true,
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "files.exclude": {
        "**/vendor": true
    }
}