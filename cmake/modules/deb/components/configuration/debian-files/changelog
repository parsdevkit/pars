file(WRITE ${CONFIG_FILE_PATH} "${PROJECT_NAME} (${RAW_VERSION}) ${DEB_SERIES}; urgency=medium\n\n")
if(EXISTS ${CHANGELOG_PATH})
    file(STRINGS ${CHANGELOG_PATH} changelog_contents)
    foreach(line IN LISTS changelog_contents)
        file(APPEND ${CONFIG_FILE_PATH} "  ${line}\n")
    endforeach()
else()
    file(APPEND ${CONFIG_FILE_PATH} "  * Not specified any changes\n")
endif()
file(APPEND ${CONFIG_FILE_PATH} "\n -- ${PROJECT_MAINTANER}  ${RELEASE_DATE_DEB}\n")