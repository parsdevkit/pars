if(${DEB_PACK_TYPE} STREQUAL "binary")
    file(WRITE ${CONFIG_FILE_PATH} "#!/usr/bin/make -f\n\n%:\n\tdh $@\n\n")
    file(APPEND ${CONFIG_FILE_PATH} "override_dh_dwz:\n\ttrue\n")
else()
    file(WRITE ${CONFIG_FILE_PATH} "#!/usr/bin/make -f\n\n%:\n")
    file(APPEND ${CONFIG_FILE_PATH} "\tif [ -z \"\$(filter \$(MY_TARGETS), \$@)\" ]; then \\\n")
    file(APPEND ${CONFIG_FILE_PATH} "\t\tdh \$@; \\\n")
    file(APPEND ${CONFIG_FILE_PATH} "\telse \\\n")
    file(APPEND ${CONFIG_FILE_PATH} "\t\t\$(MAKE) \$@; \\\n")
    file(APPEND ${CONFIG_FILE_PATH} "\tfi\n\n")
    file(APPEND ${CONFIG_FILE_PATH} "override_dh_dwz:\n\ttrue\n")
    file(APPEND ${CONFIG_FILE_PATH} "override_dh_auto_build:\n")
    file(APPEND ${CONFIG_FILE_PATH} "\t\$(MAKE) build.cmake.linux VERSION=${APP_TAG}\n")
    file(APPEND ${CONFIG_FILE_PATH} "\t\$(MAKE) build.binary.vendor OUTPUT=${LINUX_APP_BINARY_DIR}\n")
    file(APPEND ${CONFIG_FILE_PATH} "override_dh_auto_clean:\n")
    file(APPEND ${CONFIG_FILE_PATH} "\tdh_clean --exclude=debian/\n")
endif()
